---
import BaseLayout from "../layouts/BaseLayout.astro";
import { productos } from "../data/productos.js";
---

<BaseLayout title="Productos - Aplicaciones Hidráulicas del Tajo">
  <div class="productos-header">
    <h1>Nuestros Productos</h1>
    <p>
      Contamos con una amplia selección de equipos y herramientas de alta calidad
      para todas sus necesidades hidráulicas y de riego.
    </p>
  </div>

  <section class="productos">
    {productos.map((producto) => (
      <article class="producto">
        <div class="producto-image">
          <img
            src={producto.image}
            alt={producto.name}
            loading="lazy"
          />
        </div>
        <div class="producto-content">
          <span class="categoria">{producto.category}</span>
          <h3>{producto.name}</h3>
          <p>{producto.description}</p>
        </div>
      </article>
    ))}
  </section>
</BaseLayout>

<style>
  .productos-header {
    text-align: center;
    margin-bottom: 3rem;
    animation: fadeIn 0.8s ease both;
  }

  .productos-header h1 {
    margin: 0 0 1rem 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
    color: #1568a7;
  }

  .productos-header p {
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.1rem;
    color: #555;
    line-height: 1.6;
  }

  .productos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    animation: fadeUp 0.8s ease both;
  }

  .producto {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .producto:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.15);
  }

  .producto-image {
    position: relative;
    overflow: hidden;
    height: 200px;
  }

  .producto-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .producto:hover .producto-image img {
    transform: scale(1.08);
  }

  .producto-content {
    padding: 1.5rem;
  }

  .categoria {
    display: inline-block;
    background: #1568a7;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .producto h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.3rem;
    color: #333;
    line-height: 1.3;
  }

  .producto p {
    margin: 0;
    color: #666;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  /* Animaciones */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .productos {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .productos-header h1 {
      font-size: 1.8rem;
    }

    .productos-header p {
      font-size: 1rem;
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .producto,
    .producto-image img,
    .productos-header,
    .productos {
      animation: none !important;
      transition: none !important;
    }
  }
</style>