    border: 1px solid rgba(21, 104, 167, 0.2);
    border-radius: 6px;
    padding: 0.5rem;
  }

  .ejemplar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .ejemplar-nombre {
    font-weight: 600;
    color: #333;
    font-size: 0.85rem;
    flex: 1;
  }

  .ejemplar-marca {
    background: linear-gradient(135deg, #1568a7 0%, #0f3558 100%);
    color: white;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .ejemplar-caracteristicas {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .caracteristica-tag {
    background: rgba(21, 104, 167, 0.05);
