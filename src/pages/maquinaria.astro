---
import BaseLayout from "../layouts/BaseLayout.astro";
import maquinariaData from "../data/maquinaria.json";
import empresaData from "../data/aplicaciones-hidraulicas.json";
import seoData from "../data/seo.json";
import ConsultaModal from "../components/ConsultaModal.astro";
import ScrollIndicator from "../components/ScrollIndicator.astro";
import Icon from "../components/icons/Icon.astro";

// SEO Configuration
const seo = seoData.pages.maquinaria;
const baseConfig = seoData.baseConfig;

// Process template variables
const processTemplate = (template: string) => {
  return template
    .replace(/{empresa}/g, baseConfig.empresa)
    .replace(/{ubicacion}/g, baseConfig.ubicacion)
    .replace(/{web}/g, baseConfig.web)
    .replace(/{telefono}/g, baseConfig.telefono)
    .replace(/{email}/g, baseConfig.email);
};

// Preparar datos para los componentes
const todasLasMaquinas = maquinariaData.maquinas || [];
const todasLasCategorias = maquinariaData.categorias || [];

const metaTitle = processTemplate(seo.title);
const metaDescription = processTemplate(seo.description);
const metaKeywords = processTemplate(seo.keywords);
const ogImage = seo.ogImage.startsWith('http') ? seo.ogImage : baseConfig.web + seo.ogImage;
const ogImageAlt = processTemplate(seo.ogImageAlt);

// Función para obtener imágenes de categoría
const getCategoriaImagen = (categoriaId: string) => {
  const categoria = todasLasCategorias.find(c => c.id === categoriaId);
  const primeraMaquina = todasLasMaquinas.find(m => m.categoriaId === categoriaId);
  if (primeraMaquina?.imagen) {
    return `/images/${primeraMaquina.imagen}`;
  }
  return `/images/categorias/${categoriaId}.jpg`;
};

// Función para contar máquinas por categoría
const getMaquinasCount = (categoriaId: string) => {
  return todasLasMaquinas.filter(m => m.categoriaId === categoriaId).length;
};

// Función para obtener servicios por categoría
const getServiciosPorCategoria = (categoriaId: string) => {
  const maquinasCategoria = todasLasMaquinas.filter(m => m.categoriaId === categoriaId);
  const servicios = new Set();

  maquinasCategoria.forEach(maquina => {
    if (maquina.servicios?.alquiler) servicios.add('alquiler');
    if (maquina.servicios?.venta) servicios.add('venta');
    if (maquina.servicios?.reparacion) servicios.add('reparacion');
  });

  return Array.from(servicios);
};
---

<BaseLayout 
  title={metaTitle}
  description={metaDescription}
  keywords={metaKeywords}
  ogImage={ogImage}
  ogImageAlt={ogImageAlt}
  pageTitle="Maquinaria Profesional"
  pageDescription="Maquinaria profesional para construcción, agricultura, riego, jardinería y forestal. Alquiler, venta y reparación especializada."
>

  <!-- Categorías Principales -->
  <section class="categorias-maquinaria">
    <div class="container">
      <h2>Familias de Máquinas</h2>
      <div class="categorias-grid">
        {todasLasCategorias.map((categoria) => {
          const maquinasCount = getMaquinasCount(categoria.id);
          const imagenSrc = getCategoriaImagen(categoria.id);
          const serviciosCategoria = getServiciosPorCategoria(categoria.id);
          
          return (
            <div class="categoria-card">
              <div class="categoria-imagen">
                <img src={imagenSrc} alt={categoria.nombre} loading="lazy" />
                <div class="categoria-overlay">
                  <span class="maquinas-count">{maquinasCount} máquinas</span>
                </div>
                <div class="categoria-servicios-badges">
                  {serviciosCategoria.map(servicio => (
                    <span class={`categoria-servicio-badge ${servicio}`}>
                      {servicio === 'alquiler' && 'Alquiler'}
                      {servicio === 'venta' && 'Venta'}
                      {servicio === 'reparacion' && 'Reparación'}
                    </span>
                  ))}
                </div>
              </div>
              <div class="categoria-header">
                <h3>{categoria.nombre}</h3>
              </div>
              <p>{categoria.descripcion}</p>
              
              <div class="categoria-actions">
                <a href={`/maquinaria/${categoria.slug}`} class="ver-categoria-btn">
                  <span>Ver todas</span>
                  <span class="arrow">→</span>
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
</section>
  
  <!-- Scroll Indicator para guiar a sección de contacto -->
  <ScrollIndicator 
    text="¿Necesitas asesoramiento?" 
    variant="minimal"
    scrollTo="#contacto-maquinaria" 
  />

  <section id="contacto-maquinaria" class="contacto-section">
    <div class="container">
      <div class="contacto-content">
        <div class="contacto-info">
          <h2>¿Necesitas asesoramiento?</h2>
          <p>Nuestro equipo de expertos está disponible para ayudarte a encontrar la maquinaria perfecta para tus necesidades.</p>
          <div class="contacto-buttons">
            <a href="tel:+34613396432" class="contacto-btn primary">
              <span><Icon name="phone" size={20} /></span> Llamar ahora
            </a>
            <a href="mailto:ahdtajo@gmail.com" class="contacto-btn secondary">
              <span><Icon name="mail" size={20} /></span> Enviar email
            </a>
          </div>
        </div>
        <div class="horario-info">
          <h3>Horario de atención</h3>
          <div class="horario-item">
            <strong>Invierno:</strong><br>
            Lunes a Viernes: 9:00-13:00 y 16:00-20:00
          </div>
          <div class="horario-item">
            <strong>Verano:</strong><br>
            Lunes a Sábado: 9:00-13:00<br>
            Lunes a Viernes: 16:30-20:00
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<ConsultaModal />



<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Categorías */
  .categorias-maquinaria {
    padding: 4rem 0;
  }

  .categorias-maquinaria h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
    color: #1568a7;
  }

  .categorias-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .categoria-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(21, 104, 167, 0.1);
    display: flex;
    flex-direction: column;
  }

  .categoria-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 32px rgba(100, 116, 139, 0.15);
  }

  .categoria-imagen {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .categoria-imagen img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.3s ease;
  }

  .categoria-card:hover .categoria-imagen img {
    transform: scale(1.05);
  }

  .categoria-overlay {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  /* Badges de Servicios en Categorías */
  .categoria-servicios-badges {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    display: flex;
    gap: 0.3rem;
    flex-wrap: wrap;
  }

  .categoria-servicio-badge {
    background: rgba(139, 114, 100, 0.85);
    color: white;
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 600;
    backdrop-filter: blur(4px);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .categoria-servicio-badge.alquiler {
    background: rgba(34, 139, 34, 0.9);
  }

  .categoria-servicio-badge.venta {
    background: rgba(220, 53, 69, 0.9);
  }

  .categoria-servicio-badge.reparacion {
    background: rgba(255, 193, 7, 0.9);
    color: #333;
  }

  .categoria-header {
    padding: 1.5rem 1.5rem 0.5rem 1.5rem;
  }

  .categoria-header h3 {
    margin: 0;
    color: #1568a7;
    font-size: 1.3rem;
    font-weight: 600;
  }

  .categoria-card p {
    color: #555;
    line-height: 1.6;
    margin: 0.5rem 1.5rem 1.5rem 1.5rem;
  }

  .categoria-actions {
    margin-top: auto;
    padding: 0 1.5rem 1.5rem 1.5rem;
  }

  .ver-categoria-btn {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #1568a7 0%, #0f3558 100%);
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ver-categoria-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(100, 116, 139, 0.3);
  }

  .ver-categoria-btn .arrow {
    font-size: 1.1rem;
    transition: transform 0.3s ease;
  }

  .ver-categoria-btn:hover .arrow {
    transform: translateX(4px);
  }



  /* Contacto */
  .contacto-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, #1568a7 0%, #0f3558 100%);
    color: white;
  }

  .contacto-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .contacto-info h2 {
    margin: 0 0 1rem;
    font-size: 1.8rem;
  }

  .contacto-info p {
    margin-bottom: 2rem;
    line-height: 1.6;
    color: #e5eef7;
  }

  .contacto-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .contacto-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
