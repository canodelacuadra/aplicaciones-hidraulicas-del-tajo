    color: #333;
    font-size: 1rem;
  }

  .ejemplares-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .ejemplares-count {
    color: #1568a7;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .marcas-disponibles {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .marca-tag {
    background: rgba(21, 104, 167, 0.1);
