---
import BaseLayout from "../layouts/BaseLayout.astro";
import AboutSection from "../components/AboutSection.astro";
import ServicePillars from "../components/ServicePillars.astro";
import ServicesGrid from "../components/ServicesGrid.astro";
import ContactCTA from "../components/ContactCTA.astro";
import empresaData from "../data/aplicaciones-hidraulicas.json";
---

<BaseLayout title={empresaData.empresa.nombre} description={empresaData.empresa.descripcionLarga}>
  
  <!-- Hero Section Redise침ado -->
   
  <section class="hero-home">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Soluciones Integrales en Hidr치ulica, Fotovoltaica y Maquinaria</h1>
        <p class="hero-subtitle">Proyectos llave en mano, instalaciones profesionales y mantenimiento especializado para tus proyectos</p>
        
        <div class="hero-actions">
          <a href="#contacto" class="hero-cta primary">
            <span class="cta-icon">游댐</span>
            Proyecto Llave en Mano
          </a>
          <a href="#sobre-nosotros" class="hero-cta secondary">
            <span class="cta-icon">游낅</span>
            Visita Nuestra Tienda
          </a>
        </div>
      </div>
      
      <div class="hero-visual">
        <div class="hero-stats">
          <div class="stat-item">
            <span class="stat-number">3</span>
            <span class="stat-label">츼reas Especializadas</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">5</span>
            <span class="stat-label">Servicios Integrales</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">15+</span>
            <span class="stat-label">A침os de Experiencia</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="hero-wave">
      <svg viewBox="0 0 1440 120" preserveAspectRatio="none">
        <path d="M0,40 C240,80 480,0 720,20 960,40 1200,80 1440,60 L1440,120 L0,120 Z" fill="#f8fbff">
          <animate
            attributeName="d"
            dur="6s"
            repeatCount="indefinite"
            values="M0,40 C240,80 480,0 720,20 960,40 1200,80 1440,60 L1440,120 L0,120 Z;M0,60 C240,20 480,80 720,40 960,0 1200,40 1440,20 L1440,120 L0,120 Z;M0,40 C240,80 480,0 720,20 960,40 1200,80 1440,60 L1440,120 L0,120 Z"
          />
        </path>
      </svg>
    </div>
  </section>

  <!-- Secci칩n Sobre Nosotros (enfocada en tienda f칤sica) -->
  <AboutSection id="sobre-nosotros" />
  
  <!-- Tres Pilares de Servicios -->
  <ServicePillars />
  
  <!-- Servicios Integrales -->
  <ServicesGrid />
  
  <!-- Secci칩n de Contacto Mejorada -->
  <ContactCTA />

</BaseLayout>

<style>
  /* Hero Section */
  .hero-home {
    background: linear-gradient(135deg, #1568a7 0%, #0f3558 100%);
    color: white;
    padding: 5rem 1.5rem;
    position: relative;
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .hero-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-title {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    margin: 0 0 1.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: white;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    line-height: 1.6;
    margin: 0 0 3rem;
    color: #e5eef7;
    max-width: 600px;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .hero-cta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .hero-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .hero-cta:hover::before {
    left: 100%;
  }

  .hero-cta.primary {
    background: white;
    color: #1568a7;
    border: 2px solid white;
  }

  .hero-cta.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(255, 255, 255, 0.3);
  }

  .hero-cta.secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .hero-cta.secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  .cta-icon {
    font-size: 1.2rem;
  }

  .hero-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 16px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    min-width: 250px;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 3rem;
    font-weight: 700;
    color: #a8d0ff;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #e5eef7;
    line-height: 1.4;
  }

  /* Hero Wave */
  .hero-wave {
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero-wave svg {
    display: block;
    width: 100%;
    height: 120px;
  }

  .hero-wave path {
    fill: #f8fbff;
    opacity: 1;
  }

  /* Background Pattern */
  .hero-home::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.03"><path d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/></g></g></svg>') repeat;
    opacity: 0.3;
    z-index: 1;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-visual {
      order: -1;
    }

    .hero-stats {
      grid-template-columns: repeat(3, 1fr);
      min-width: auto;
      max-width: 600px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .hero-home {
      padding: 3rem 1rem;
      min-height: auto;
    }

    .hero-title {
      font-size: clamp(2rem, 6vw, 2.5rem);
    }

    .hero-subtitle {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .hero-cta {
      width: 100%;
      max-width: 300px;
      justify-content: center;
      padding: 1rem 1.5rem;
    }

    .hero-stats {
      grid-template-columns: 1fr;
      padding: 1.5rem;
      min-width: auto;
    }

    .stat-number {
      font-size: 2.5rem;
    }
  }

  /* Animaciones */
  @keyframes heroFadeIn {
    from {
      opacity: 0;
      transform: translateY(40px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .hero-text {
    animation: heroFadeIn 1s ease-out;
  }

  .hero-stats {
    animation: heroFadeIn 1s ease-out 0.2s both;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-home::before,
    .hero-wave path {
      animation: none !important;
    }

    .hero-text,
    .hero-stats,
    .hero-cta {
      animation: none !important;
      transition: none !important;
    }

    .hero-cta::before {
      display: none;
    }
  }
</style>

<script>
  if (typeof window !== "undefined") {
    window.addEventListener("DOMContentLoaded", () => {
      // Smooth scroll para los enlaces internos
      document.querySelectorAll('a[href^="#"]').forEach((anchor: HTMLAnchorElement) => {
        anchor.addEventListener('click', (e: Event) => {
          e.preventDefault();
          const targetId = anchor.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            const offsetTop = targetElement.offsetTop - 80; // Offset for sticky header
            window.scrollTo({
              top: offsetTop,
              behavior: 'smooth'
            });
          }
        });
      });
    });
  }
</script>