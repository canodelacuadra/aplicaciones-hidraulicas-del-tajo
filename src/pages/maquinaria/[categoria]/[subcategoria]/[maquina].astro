// Generar rutas estáticas para todas las máquinas
export async function getStaticPaths() {
  const paths = [];

  for (const categoria of maquinariaData.categorias) {
    for (const subcategoria of categoria.subcategorias || []) {
      for (const maquinaId of subcategoria.maquinas || []) {
        const maquina = maquinariaData.maquinas.find(m => m.id === maquinaId);
        if (maquina) {
          paths.push({
            params: {
              categoria: categoria.slug || categoria.id,
              subcategoria: subcategoria.slug || subcategoria.id,
              maquina: maquina.slug || maquina.id
            },
            props: {
              maquinaData: maquina,
              categoriaData: categoria,
              subcategoriaData: subcategoria,
              categoriaSlug: categoria.slug || categoria.id,
              subcategoriaSlug: subcategoria.slug || subcategoria.id,
              maquinaSlug: maquina.slug || maquina.id
            }
          });
        }
      }
    }
  }

  return paths;
}

const {
  maquinaData,
  categoriaData,
  subcategoriaData,
  categoriaSlug,
  subcategoriaSlug,
  maquinaSlug
} = Astro.props;

if (!maquinaData || !categoriaData || !subcategoriaData) {
  return Astro.redirect("/maquinaria");
}

// Obtener imágenes adicionales si existen
const getImagenesAdicionales = () => {
  // Aquí podrías implementar lógica para buscar más imágenes de la misma máquina
  // Por ahora, devolvemos un array con la imagen principal
  return maquinaData.imagen ? [maquinaData.imagen] : [];
};

// Obtener máquinas relacionadas
const getMaquinasRelacionadas = () => {
  return maquinariaData.maquinas
    .filter(m =>
      m.categoriaId === categoriaData.id &&
      m.subcategoriaId === subcategoriaData.id &&
      m.id !== maquinaData.id
    )
    .slice(0, 6);
};

// Función helper para obtener imágenes usando public/
const getMaquinaImagen = (maquina: any, fallbackPath: string | null = null) => {
  // 1. Try machine-specific image from public/images
  if (maquina && maquina.imagen) {
    return `/images/${maquina.imagen}`;
  }

  // 2. Final fallback - default SVG
  return '/images/maquina-default.svg';
};

// Construir ruta de imagen (versión síncrona para compatibilidad)
const getImagePath = (imagen: string) => {
  return `/images/${imagen}`;
};

// Formatear especificaciones
const formatEspecificaciones = (especificaciones: Record<string, any>) => {
  return Object.entries(especificaciones).map(([key, value]) => ({
    label: key.charAt(0).toUpperCase() + key.slice(1),
    value: value
  }));
};
