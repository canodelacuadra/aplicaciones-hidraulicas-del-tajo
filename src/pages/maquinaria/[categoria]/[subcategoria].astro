// Funci√≥n para generar rutas est√°ticas
export async function getStaticPaths() {
  const paths = [];
  
  for (const categoria of maquinariaData.categorias) {
    for (const subcategoria of categoria.subcategorias || []) {
      if (subcategoria.tieneMaquinas) {
        paths.push({
          params: { 
            categoria: categoria.slug || categoria.id,
            subcategoria: subcategoria.slug || subcategoria.id
          },
          props: {
            categoriaData: categoria,
            subcategoriaData: subcategoria,
            categoriaSlug: categoria.slug || categoria.id,
            subcategoriaSlug: subcategoria.slug || subcategoria.id
          }
        });
      }
    }
  }
  
  return paths;
}

const { 
  categoriaData, 
  subcategoriaData, 
  categoriaSlug, 
  subcategoriaSlug 
} = Astro.props;

if (!categoriaData || !subcategoriaData) {
  return Astro.redirect("/maquinaria");
}

// Obtener todas las m√°quinas y subcategor√≠as
const todasLasMaquinas = maquinariaData.maquinas || [];
const todasLasSubcategorias = categoriaData.subcategorias || [];

// Obtener todas las subcategor√≠as para an√°lisis
const todasLasSubcategoriasDisponibles = maquinariaData.categorias.flatMap(cat => cat.subcategorias || []);

// Funci√≥n para obtener imagen de subcategor√≠a con fallback
const getSubcategoriaImagen = (subcategoria: any) => {
  // Buscar primera m√°quina con imagen en esta subcategor√≠a
  const maquinasConImagen = todasLasMaquinas.filter((m: any) => 
    m.subcategoriaId === subcategoria.id && m.imagen
  );
  
  if (maquinasConImagen.length > 0) {
    return `/src/assets/fotos-maquinas/${maquinasConImagen[0].imagen}`;
  }
  
  // Fallback a imagen default
  return "/src/assets/fotos-maquinas/maquina-default.svg";
};

// Funci√≥n para obtener m√°quinas por subcategor√≠a
const getMaquinasPorSubcategoria = (subcategoriaId: string) => {
  return todasLasMaquinas.filter((m: any) => m.subcategoriaId === subcategoriaId);
};

// Funci√≥n para obtener servicios disponibles por subcategor√≠a
const getServiciosPorSubcategoria = (subcategoriaId: string) => {
  const maquinasSubcategoria = todasLasMaquinas.filter((m: any) => m.subcategoriaId === subcategoriaId);
  const servicios = new Set();
  
  maquinasSubcategoria.forEach((maquina: any) => {
    if (maquina.servicios?.alquiler) servicios.add('alquiler');
    if (maquina.servicios?.venta) servicios.add('venta');
    if (maquina.servicios?.reparacion) servicios.add('reparacion');
  });
  
  return Array.from(servicios);
};
