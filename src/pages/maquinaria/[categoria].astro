export async function getStaticPaths() {
  return maquinariaData.categorias.map((categoria) => ({
    params: { categoria: categoria.slug || categoria.id },
    props: { 
      categoriaData: categoria,
      categoriaSlug: categoria.slug || categoria.id
    },
  }));
}

const { categoriaData, categoriaSlug } = Astro.props;

if (!categoriaData) {
  return Astro.redirect("/maquinaria");
}

// Obtener m√°quinas de esta categor√≠a
const todasLasMaquinas = maquinariaData.maquinas || [];
const maquinasCategoria = todasLasMaquinas.filter(m => m.categoriaId === categoriaData.id);

// Obtener subcategor√≠as de esta categor√≠a
const subcategorias = categoriaData.subcategorias || [];

// Funci√≥n para obtener imagen de categor√≠a
const getCategoriaImagen = () => {
  const primeraMaquina = maquinasCategoria[0];
  if (primeraMaquina?.imagen) {
    return `/images/${primeraMaquina.imagen}`;
  }
  return `/images/categorias/${categoriaData.id}.jpg`;
};

// Funci√≥n para contar m√°quinas por subcategor√≠a
const getMaquinasCountPorSubcategoria = (subcategoriaId: string) => {
  return todasLasMaquinas.filter(m => 
    m.categoriaId === categoriaData.id && m.subcategoriaId === subcategoriaId
  ).length;
};

// Funci√≥n para obtener imagen de subcategor√≠a
const getSubcategoriaImagen = (subcategoriaId: string) => {
  const primeraMaquina = todasLasMaquinas.find(m => 
    m.subcategoriaId === subcategoriaId
  );
  if (primeraMaquina?.imagen) {
    return `/images/${primeraMaquina.imagen}`;
  }
  return `/images/subcategorias/${subcategoriaId}.jpg`;
};

