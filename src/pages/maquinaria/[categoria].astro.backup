---
import BaseLayout from "../../layouts/BaseLayout.astro";
import maquinariaData from "../../data/maquinaria.json";
import empresaData from "../../data/aplicaciones-hidraulicas.json";

interface Maquina {
  id: string;
  nombre: string;
  imagen?: string;
  ejemplares: Array<{
    nombre: string;
    marca: string;
    caracteristicas: string[];
  }>;
}

interface Categoria {
  id: string;
  nombre: string;
  descripcion: string;
  icono: string;
  imagen: string;
  maquinas: Maquina[];
}

export async function getStaticPaths() {
  return maquinariaData.categorias.map((categoria) => ({
    params: { categoria: categoria.id },
    props: { categoriaData: categoria },
  }));
}

const { categoriaData } = Astro.props;

if (!categoriaData) {
  return Astro.redirect("/maquinaria");
}

if (!categoriaData) {
  return Astro.redirect("/maquinaria");
}
