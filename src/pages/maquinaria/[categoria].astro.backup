<script is:inline>
  function mostrarConsulta(nombreEjemplar, marca) {
    const telefono = '+34672942881';
    const email = 'ahdtajo@gmail.com';
    const subject = `Consulta sobre ${nombreEjemplar} - ${marca}`;
    
    if (confirm(`¬øDeseas consultar informaci√≥n sobre ${nombreEjemplar} (${marca})?\n\nPuedes:\n‚Ä¢ Llamar al ${telefono}\n‚Ä¢ Enviar email a ${email}`)) {
      // Aqu√≠ podr√≠as abrir un modal de contacto o redirigir
      window.location.href = `mailto:${email}?subject=${encodeURIComponent(subject)}`;
    }
  }
</script>

<style>
