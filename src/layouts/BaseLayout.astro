---
import Header from "../components/header.astro";
import Footer from "../components/Footer.astro";
import seoData from "../data/seo.json";
import empresaData from "../data/aplicaciones-hidraulicas.json";

const { title, description, keywords, pageTitle, pageDescription: pageDesc, ogImage, ogImageAlt } = Astro.props;

const metaTitle = title || seoData.pages.index.title;
const metaDescription = description || seoData.pages.index.description;

// Sistema de fallback inteligente para imágenes OG usando seo.json
const getOGImage = () => {
  if (ogImage) return `${seoData.baseConfig.web}${ogImage}`;
  
  // Lógica por tipo de página basada en URL usando seo.json
  const path = Astro.url.pathname;
  if (path === '/') return `${seoData.baseConfig.web}${seoData.pages.index.ogImage}`;
  if (path.includes('/hidraulica')) return `${seoData.baseConfig.web}${seoData.pages.hidraulica.ogImage}`;
  if (path.includes('/maquinaria')) return `${seoData.baseConfig.web}${seoData.pages.maquinaria.ogImage}`;
  if (path.includes('/fotovoltaica')) return `${seoData.baseConfig.web}${seoData.pages.fotovoltaica.ogImage}`;
  
  // Fallback general - logo corporativo
  return `${seoData.baseConfig.web}${empresaData.empresa.logotipo}`;
};

const getOGImageAlt = () => {
  if (ogImageAlt) return ogImageAlt;
  
  const path = Astro.url.pathname;
  if (path === '/') return seoData.pages.index.ogImageAlt;
  if (path.includes('/hidraulica')) return seoData.pages.hidraulica.ogImageAlt;
  if (path.includes('/maquinaria')) return seoData.pages.maquinaria.ogImageAlt;
  if (path.includes('/fotovoltaica')) return seoData.pages.fotovoltaica.ogImageAlt;
  
  return `Logotipo de ${seoData.baseConfig.empresa} - Soluciones profesionales en ${seoData.baseConfig.ubicacion}`;
};

// Determinar og:type dinámicamente
const getOGType = () => {
  const path = Astro.url.pathname;
  // Para páginas de máquinas individuales (URL con 4+ segmentos)
  if (path.includes('/maquinaria/') && path.split('/').length >= 5) {
    return (seoData as any).maquinaria.individual.ogType;
  }
  return "website";
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
<!-- Meta tags para SEO -->
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content={getOGType()} />
    <meta property="og:url" content={seoData.baseConfig.web + Astro.url.pathname} />
    <meta property="og:site_name" content={seoData.baseConfig.empresa} />
    <meta property="og:image" content={ogImage || getOGImage()} />
    <meta property="og:image:alt" content={ogImageAlt || getOGImageAlt()} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImage || getOGImage()} />
    <meta name="twitter:image:alt" content={ogImageAlt || getOGImageAlt()} />
    
    <!-- Additional meta tags for social sharing -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={seoData.baseConfig.web + Astro.url.pathname} />
    <link rel="shortcut icon" href="ahdt-logo.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    
    <!-- Meta keywords para SEO -->
    {keywords && <meta name="keywords" content={keywords} />}
    
    <!-- Schema.org JSON-LD para Local Business y Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "LocalBusiness",
          "name": empresaData.empresa.nombre,
          "image": `${empresaData.empresa.web}${empresaData.empresa.fachadaImagen}`,
          "telephone": empresaData.contacto.telefono,
          "email": empresaData.contacto.email,
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Calle Dalí 1",
            "addressLocality": "Torrijos",
            "addressRegion": "Toledo",
            "postalCode": "45500",
            "addressCountry": "ES"
          },
          "openingHoursSpecification": [
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "09:00",
              "closes": "13:00"
            },
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "16:00",
              "closes": "20:00"
            }
          ],
          "url": empresaData.empresa.web
        },
        {
          "@type": "Organization",
          "name": empresaData.empresa.nombre,
          "url": empresaData.empresa.web,
          "logo": `${empresaData.empresa.web}${empresaData.empresa.logotipo}`,
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": empresaData.contacto.telefono,
            "contactType": "customer service",
            "availableLanguage": ["Spanish"]
          },
          "sameAs": [],
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Calle Dalí 1",
            "addressLocality": "Torrijos",
            "addressRegion": "Toledo",
            "postalCode": "45500",
            "addressCountry": "ES"
          }
        }
      ]
    })} />
  </head>
  <body>
    <Header pageTitle={pageTitle} pageDescription={pageDesc} />

    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  :root {
    --primary: #1568a7;
    --bg: #f5f7fa;
    --dark: #1f2933;
    --light: #f5f7fa;
    
    /* Colores secundarios por pilar */
    --fotovoltaica: #22c55e;
    --maquinaria: #fb923c;
    --hidraulica: #28C8F0;
  }
  body {
    font-family: "IBM Plex Sans", system-ui, sans-serif;
    margin: 0;
    background: var(--bg);
    color: var(--dark);
  }

  header {
    padding: 1em;
    background: var(--primary);
    color: var(--light);
  }

  main {
    padding: 2rem;
  }
</style>
