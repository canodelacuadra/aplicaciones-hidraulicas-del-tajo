---
import Header from "../components/header.astro";
import Footer from "../components/Footer.astro";
import empresaData from "../data/aplicaciones-hidraulicas.json";

const { title, description, keywords, pageTitle, pageDescription: pageDesc, ogImage, ogImageAlt } = Astro.props;

const metaTitle = title || empresaData.seo.tituloBase;
const metaDescription = description || empresaData.seo.descripcionBase;

// Sistema de fallback inteligente para imágenes OG
const getOGImage = () => {
  if (ogImage) return `${empresaData.empresa.web}${ogImage}`;
  
  // Lógica por tipo de página basada en URL
  const path = Astro.url.pathname;
  if (path === '/') return `${empresaData.empresa.web}${empresaData.empresa.fachadaImagen}`;
  if (path.includes('/hidraulica')) return `${empresaData.empresa.web}${empresaData.empresa.logotipo}`;
  if (path.includes('/maquinaria')) return `${empresaData.empresa.web}/images/maquinaria-profesional.jpg`;
  if (path.includes('/fotovoltaica')) return `${empresaData.empresa.web}/images/tratamiento-aguas-hero.jpg`;
  
  // Fallback general - logo corporativo
  return `${empresaData.empresa.web}${empresaData.empresa.logotipo}`;
};

const getOGImageAlt = () => {
  if (ogImageAlt) return ogImageAlt;
  
  const path = Astro.url.pathname;
  if (path === '/') return `Tienda de ${empresaData.empresa.nombre} en Torrijos, Toledo`;
  if (path.includes('/hidraulica')) return `Soluciones hidráulicas profesionales de ${empresaData.empresa.nombre}`;
  if (path.includes('/maquinaria')) return `Maquinaria profesional para alquiler, venta y reparación de ${empresaData.empresa.nombre}`;
  if (path.includes('/fotovoltaica')) return `Soluciones fotovoltaicas profesionales de ${empresaData.empresa.nombre}`;
  
  return `Logotipo de ${empresaData.empresa.nombre} - Soluciones profesionales en Torrijos, Toledo`;
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
<!-- Meta tags para SEO -->
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={empresaData.empresa.web} />
    <meta property="og:site_name" content={empresaData.empresa.nombre} />
    <meta property="og:image" content={ogImage || getOGImage()} />
    <meta property="og:image:alt" content={ogImageAlt || getOGImageAlt()} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImage || getOGImage()} />
    <meta name="twitter:image:alt" content={ogImageAlt || getOGImageAlt()} />
    
    <!-- Additional meta tags for social sharing -->
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={empresaData.empresa.web + Astro.url.pathname} />
    <link rel="shortcut icon" href="ahdt-logo.png" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
    
    <!-- Meta keywords para SEO -->
    {keywords && <meta name="keywords" content={keywords} />}
    
    <!-- Schema.org JSON-LD para Local Business y Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "LocalBusiness",
          "name": empresaData.empresa.nombre,
          "image": `${empresaData.empresa.web}${empresaData.empresa.fachadaImagen}`,
          "telephone": empresaData.contacto.telefono,
          "email": empresaData.contacto.email,
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Calle Dalí 1",
            "addressLocality": "Torrijos",
            "addressRegion": "Toledo",
            "postalCode": "45500",
            "addressCountry": "ES"
          },
          "openingHoursSpecification": [
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "09:00",
              "closes": "13:00"
            },
            {
              "@type": "OpeningHoursSpecification",
              "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
              "opens": "16:00",
              "closes": "20:00"
            }
          ],
          "url": empresaData.empresa.web
        },
        {
          "@type": "Organization",
          "name": empresaData.empresa.nombre,
          "url": empresaData.empresa.web,
          "logo": `${empresaData.empresa.web}${empresaData.empresa.logotipo}`,
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": empresaData.contacto.telefono,
            "contactType": "customer service",
            "availableLanguage": ["Spanish"]
          },
          "sameAs": [],
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Calle Dalí 1",
            "addressLocality": "Torrijos",
            "addressRegion": "Toledo",
            "postalCode": "45500",
            "addressCountry": "ES"
          }
        }
      ]
    })} />
  </head>
  <body>
    <Header pageTitle={pageTitle} pageDescription={pageDesc} />

    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  :root {
    --primary: #1568a7;
    --bg: #f5f7fa;
    --dark: #1f2933;
    --light: #f5f7fa;
    
    /* Colores secundarios por pilar */
    --fotovoltaica: #22c55e;
    --maquinaria: #fb923c;
    --hidraulica: #28C8F0;
  }
  body {
    font-family: "IBM Plex Sans", system-ui, sans-serif;
    margin: 0;
    background: var(--bg);
    color: var(--dark);
  }

  header {
    padding: 1em;
    background: var(--primary);
    color: var(--light);
  }

  main {
    padding: 2rem;
  }
</style>
