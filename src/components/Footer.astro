<style>
  .site-footer {
    background: linear-gradient(135deg, #1568a7 0%, #0f3558 100%);
    color: #e5eef7;
    margin-top: 0;
  }

  .footer-wave {
    width: 100%;
    line-height: 0;
  }

  .footer-wave svg {
    width: 100%;
    height: 70px;
    display: block;
  }

  .footer-wave path {
    fill: #f5f7fa; /* mismo color que fondo de la web */
  }
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .footer-brand h3 {
    margin: 0 0 0.75rem;
    font-size: 1.2rem;
    color: white;
  }

  .footer-brand p {
    margin: 0;
    max-width: 420px;
    line-height: 1.5;
     color: white;
     font-style: italic;
   
  }

  .footer-contact h4 {
    margin-bottom: 0.75rem;
    color: white;
  }

  .footer-contact ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-contact li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-hours {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .footer-hours h5 {
    margin: 0 0 0.5rem;
    color: white;
    font-size: 1rem;
  }

  .footer-hours p {
    margin: 0.5rem 0;
    font-size: 0.85rem;
    color: #d1dbe6;
    line-height: 1.4;
  }



  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    text-align: center;
    padding: 1rem;
    font-size: 0.9rem;
    color: #d1dbe6;
  }
  .footer-bottom p{
       color: #d1dbe6;
       font-weight: bold;

  }
  .footer-contact a {
    color: #e5eef7;
    text-decoration: none;
  }

  .footer-contact a:hover {
    text-decoration: underline;
  }
.footer-image img {
  width: 100%;
  height: 250px;
  object-fit: cover;
  border-radius: 8px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.2);
  margin-bottom: 1.5rem;
}

.footer-map {
  position: relative;
}

.footer-map :global(.leaflet-container) {
  border-radius: 8px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.2);
}

.footer-map :global(.custom-tooltip) {
  background: #1568a7 !important;
  border: none !important;
  border-radius: 4px !important;
  color: white !important;
  font-weight: bold !important;
  box-shadow: 0 2px 8px rgba(0,0,0,0.3) !important;
}

.footer-map :global(.custom-tooltip::before) {
  border-top-color: #1568a7 !important;
}

.map-link {
  display: inline-block;
  margin-top: 0.5rem;
  font-size: 0.85rem;
  color: #d1dbe6;
  text-decoration: underline;
}

.map-link:hover {
  color: #ffffff;
}

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-brand p {
      margin: 0 auto;
    }

    .footer-contact li {
      justify-content: center;
    }



    .footer-image img {
      height: 200px;
    }

    .footer-map :global(.leaflet-container) {
      height: 220px;
    }
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }


</style>
