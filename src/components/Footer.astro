---
import FooterSocial from './FooterSocial.astro';
import LocationMap from './LocationMap.tsx';
import empresaData from '../data/aplicaciones-hidraulicas.json';
---

<footer class="site-footer">
  <div class="footer-wave">
    <svg viewBox="0 0 1440 120" preserveAspectRatio="none">
      <path
        d="M0,60 C240,40 480,80 720,60 960,40 1200,0 1440,20 L1440,0 L0,0 Z"
        fill="#1568A7"></path>
    </svg>
  </div>
  <div class="footer-content">
    <div class="footer-left">
<div class="footer-brand">
        <div class="footer-logo">
          <img 
            src={empresaData.empresa.logotipo} 
            alt={`Logo ${empresaData.empresa.nombre}`}
            width="100"
            height="auto"
          />
        </div>
        <h3>{empresaData.empresa.nombre}</h3>
        <p>
          {empresaData.empresa.descripcionCorta}
        </p>
      </div>

      <div id="contacto"  class="footer-contact">
        <h4>Contacto</h4>
        <ul>
          <li>
            üìç <span>{empresaData.contacto.direccion}</span>
          </li>
          <li>
            üìû <a href={`tel:${empresaData.contacto.telefonoHref}`}>{empresaData.contacto.telefono}</a>
          </li>
          <li>
            ‚úâÔ∏è <a href={`mailto:${empresaData.contacto.email}`}>{empresaData.contacto.email}</a>
          </li>
        </ul>
        <div class="footer-hours">
          <h5>Horario</h5>
          <p><strong>{empresaData.horario.invierno.nombre}:</strong><br>
          {empresaData.horario.invierno.dias}: {empresaData.horario.invierno.manana} y {empresaData.horario.invierno.tarde}</p>
          <p><strong>{empresaData.horario.verano.nombre}:</strong><br>
          {empresaData.horario.verano.dias}: {empresaData.horario.verano.manana}<br>
          {empresaData.horario.verano.tarde}</p>
        </div>
        <FooterSocial />
      </div>
    </div>
    
    <div class="footer-right">
      <div class="footer-image">
        <img src={empresaData.empresa.fachadaImagen} alt={`Fachada de la tienda ${empresaData.empresa.nombre}`} />
      </div>
      <div class="footer-map">
        <LocationMap client:load empresaData={empresaData} />
        <a href={`https://www.openstreetmap.org/?#map=19/${empresaData.contacto.coordenadas.latitud}/${empresaData.contacto.coordenadas.longitud}&layers=N`} class="map-link" target="_blank" rel="noopener noreferrer">
          Ver el mapa m√°s grande
        </a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>¬© {new Date().getFullYear()} {empresaData.empresa.nombre}</p>
  </div>
</footer>



<style>
  .site-footer {
    background: linear-gradient(135deg, #1568a7 0%, #0f3558 100%);
    color: #e5eef7;
    margin-top: 0;
  }

  .footer-wave {
    width: 100%;
    line-height: 0;
  }

  .footer-wave svg {
    width: 100%;
    height: 70px;
    display: block;
  }

  .footer-wave path {
    fill: #f5f7fa; /* mismo color que fondo de la web */
  }
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .footer-logo {
    margin-bottom: 1rem;
    display: inline-block;
  }

  .footer-logo img {
    width: 90px;
    height: auto;
    display: block;
    opacity: 0.9;
    transition: opacity 0.3s ease;
  }

  .footer-logo img:hover {
    opacity: 1;
  }

  .footer-brand h3 {
    margin: 0 0 0.75rem;
    font-size: 1.2rem;
    color: white;
  }

  .footer-brand p {
    margin: 0;
    max-width: 420px;
    line-height: 1.5;
     color: white;
     font-style: italic;
   
  }

  .footer-contact h4 {
    margin-bottom: 0.75rem;
    color: white;
  }

  .footer-contact ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-contact li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .footer-hours {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
  }

  .footer-hours h5 {
    margin: 0 0 0.5rem;
    color: white;
    font-size: 1rem;
  }

  .footer-hours p {
    margin: 0.5rem 0;
    font-size: 0.85rem;
    color: #d1dbe6;
    line-height: 1.4;
  }



  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    text-align: center;
    padding: 1rem;
    font-size: 0.9rem;
    color: #d1dbe6;
  }
  .footer-bottom p{
       color: #d1dbe6;
       font-weight: bold;

  }
  .footer-contact a {
    color: #e5eef7;
    text-decoration: none;
  }

  .footer-contact a:hover {
    text-decoration: underline;
  }
.footer-image img {
  width: 100%;
  height: 250px;
  object-fit: cover;
  border-radius: 8px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.2);
  margin-bottom: 1.5rem;
}

.footer-map {
  position: relative;
}

.footer-map :global(.leaflet-container) {
  border-radius: 8px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.2);
}

.footer-map :global(.custom-tooltip) {
  background: #1568a7 !important;
  border: none !important;
  border-radius: 4px !important;
  color: white !important;
  font-weight: bold !important;
  box-shadow: 0 2px 8px rgba(0,0,0,0.3) !important;
}

.footer-map :global(.custom-tooltip::before) {
  border-top-color: #1568a7 !important;
}

.map-link {
  display: inline-block;
  margin-top: 0.5rem;
  font-size: 0.85rem;
  color: #d1dbe6;
  text-decoration: underline;
}

.map-link:hover {
  color: #ffffff;
}

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-brand p {
      margin: 0 auto;
    }

    .footer-contact li {
      justify-content: center;
    }



    .footer-image img {
      height: 200px;
    }

    .footer-map :global(.leaflet-container) {
      height: 220px;
    }
  }

  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
  }


</style>
