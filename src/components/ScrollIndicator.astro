---
// Props del componente
const { 
  text = "Explora más abajo", 
  showText = true,
  scrollTo = null,
  variant = "default" // default, minimal, prominent
} = Astro.props;

// Determinar el selector de scroll
const getScrollTarget = () => {
  if (scrollTo) return scrollTo;
  return 'next-section';
};

// Clases CSS según variant
const getVariantClasses = () => {
  const baseClasses = 'scroll-indicator';
  const variantClasses = {
    default: 'scroll-indicator--default',
    minimal: 'scroll-indicator--minimal', 
    prominent: 'scroll-indicator--prominent'
  };
  return `${baseClasses} ${variantClasses[variant] || variantClasses.default}`;
};
---

<!-- Scroll Indicator Component -->
<div class={getVariantClasses()} data-astro-cid-scroll>
  {showText && (
    <div class="scroll-indicator__text" data-astro-cid-scroll>
      {text}
    </div>
  )}
  
  <div class="scroll-indicator__arrow" data-astro-cid-scroll>
    <div class="scroll-indicator__arrow-icon" data-astro-cid-scroll>
      <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
      </svg>
    </div>
    {variant !== 'minimal' && (
      <div class="scroll-indicator__arrow-dot" data-astro-cid-scroll></div>
    )}
  </div>
</div>

<script>
  // Manejar clic en el scroll indicator
  document.addEventListener('astro:page-load', () => {
    const scrollIndicator = document.querySelector('[data-astro-cid-scroll]');
    
    if (scrollIndicator) {
      scrollIndicator.addEventListener('click', () => {
        const targetSelector = getScrollTarget();
        const targetElement = targetSelector === 'next-section'
          ? scrollIndicator.closest('section')?.nextElementSibling
          : document.querySelector(targetSelector);
          
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    }
  });
</script>

<style>
  :root {
    --scroll-indicator-color: #1568a7;
    --scroll-indicator-size: 48px;
    --scroll-indicator-gap: 1rem;
  }

  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--scroll-indicator-gap);
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  .scroll-indicator:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  /* Variants */
  .scroll-indicator--default {
    padding: 1.5rem 0;
  }

  .scroll-indicator--minimal {
    padding: 1rem 0;
    opacity: 0.6;
  }

  .scroll-indicator--minimal:hover {
    opacity: 0.9;
  }

  .scroll-indicator--prominent {
    padding: 2rem 0;
    opacity: 1;
  }

  /* Text styles */
  .scroll-indicator__text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  /* Arrow container */
  .scroll-indicator__arrow {
    position: relative;
    width: var(--scroll-indicator-size);
    height: var(--scroll-indicator-size);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Arrow icon */
  .scroll-indicator__arrow-icon {
    width: 24px;
    height: 24px;
    color: rgba(255, 255, 255, 0.9);
    animation: scrollBounce 2s ease-in-out infinite;
  }

  /* Arrow dot (for non-minimal variants) */
  .scroll-indicator__arrow-dot {
    position: absolute;
    bottom: 8px;
    width: 6px;
    height: 6px;
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    animation: scrollPulse 2s ease-in-out infinite;
  }

  /* Animations */
  @keyframes scrollBounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @keyframes scrollPulse {
    0%, 100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(0.8);
    }
  }

  /* Responsive design */
  @media (max-width: 768px) {
    :root {
      --scroll-indicator-size: 40px;
      --scroll-indicator-gap: 0.75rem;
    }

    .scroll-indicator__text {
      font-size: 0.75rem;
    }

    .scroll-indicator--minimal {
      padding: 0.75rem 0;
    }

    .scroll-indicator--default {
      padding: 1rem 0;
    }

    .scroll-indicator--prominent {
      padding: 1.5rem 0;
    }
  }

  /* Accessibility - Respect user preferences */
  @media (prefers-reduced-motion: reduce) {
    .scroll-indicator__arrow-icon {
      animation: none;
    }

    .scroll-indicator__arrow-dot {
      animation: none;
    }

    .scroll-indicator:hover {
      transform: none;
    }
  }

  /* Dark mode support (if needed) */
  @media (prefers-color-scheme: dark) {
    .scroll-indicator__text {
      color: rgba(255, 255, 255, 0.7);
    }

    .scroll-indicator__arrow-icon {
      color: rgba(255, 255, 255, 0.8);
    }
  }
</style>